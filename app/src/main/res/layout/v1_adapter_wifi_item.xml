<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="54dp">
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true">
        <TextView android:textSize="14sp" android:textColor="#212121" android:id="@+id/tv_wifi_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SUNMI"/>
        <TextView android:textSize="12sp" android:textColor="#ff6900" android:id="@+id/tv_wifi_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="已连接"/>
    </LinearLayout>
    <ImageView android:id="@+id/img_wifi_signal" android:layout_width="20dp" android:layout_height="24dp" android:src="@drawable/wifi_1" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
</RelativeLayout>
