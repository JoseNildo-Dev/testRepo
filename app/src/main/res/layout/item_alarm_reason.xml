<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="36dp">
    <RelativeLayout android:id="@+id/item_rl" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="match_parent">
        <View android:id="@+id/line" android:background="#dddddd" android:layout_width="match_parent" android:layout_height="0.5dp"/>
        <TextView android:textSize="14sp" android:textColor="#222222" android:gravity="center_vertical" android:id="@+id/alarm_text" android:layout_width="146dp" android:layout_height="match_parent" android:text="@string/alarm_reason_1" android:layout_below="@+id/line"/>
        <RelativeLayout android:gravity="center" android:id="@+id/image1" android:layout_width="55dp" android:layout_height="match_parent" android:layout_alignTop="@+id/alarm_text" android:layout_marginStart="28dp" android:layout_toEndOf="@+id/alarm_text">
            <ImageView android:id="@+id/alarm_img" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/no_data"/>
        </RelativeLayout>
        <RelativeLayout android:gravity="center" android:layout_width="55dp" android:layout_height="match_parent" android:layout_toRightOf="@+id/image1" android:layout_alignTop="@+id/alarm_text" android:layout_marginStart="44dp">
            <ImageView android:id="@+id/history_alarm_img" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/no_data"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
