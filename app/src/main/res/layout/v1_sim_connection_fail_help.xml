        <ImageView android:layout_width="24dp" android:layout_height="24dp" android:layout_marginLeft="16dp" android:src="@drawable/img_back" android:layout_alignParentBottom="true" android:contentDescription="@null"/>
    </RelativeLayout>
    <TextView android:textSize="15sp" android:textColor="@color/font_orange" android:gravity="center_horizontal" android:id="@+id/top_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="74dp" android:text="@string/dialog_sim_card_network_connetion_failed_guide" android:layout_centerHorizontal="true"/>
