    <RelativeLayout android:id="@+id/tip" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="22dp" android:layout_marginTop="38dp" android:layout_marginRight="22dp" android:layout_below="@+id/relayout">
        <TextView android:textSize="13sp" android:textColor="@color/black" android:id="@+id/txt_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/wenxintishi"/>
        <TextView android:textSize="13sp" android:textColor="@color/black" android:id="@+id/txt_msg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="13.5dp" android:text="@string/wenxintishi_msg1" android:layout_below="@+id/txt_title" android:lineSpacingExtra="13.5dp"/>
    </RelativeLayout>
</RelativeLayout>
