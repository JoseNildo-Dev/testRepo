<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/dialog_bg" android:layout_width="310dp" android:layout_height="wrap_content">
    <TextView android:textSize="18sp" android:textColor="@color/C666666" android:id="@+id/dialog_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:text="商米科技" android:layout_centerHorizontal="true"/>
    <TextView android:textSize="14sp" android:textColor="#222222" android:gravity="center" android:id="@+id/dialog_msg" android:paddingLeft="32dp" android:paddingRight="32dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="音量键可设置为快捷扫码键，\10是否前去设置？" android:layout_below="@+id/dialog_title" android:lineSpacingExtra="4dp"/>
    <View android:id="@+id/horizontal_line" android:background="#dedede" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginTop="28dp" android:layout_below="@+id/dialog_msg"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/custom_bottom" android:layout_width="match_parent" android:layout_height="45dp" android:layout_below="@+id/horizontal_line">
        <TextView android:textSize="14sp" android:textColor="#222222" android:gravity="center" android:id="@+id/left" android:background="@drawable/ripple_bg_left_bottom" android:layout_width="0dp" android:layout_height="match_parent" android:text="取消" android:layout_weight="1"/>
        <View android:id="@+id/line_view" android:background="#dcdcdc" android:layout_width="0.5dp" android:layout_height="match_parent"/>
        <TextView android:textSize="14sp" android:textColor="#222222" android:gravity="center" android:id="@+id/right" android:background="@drawable/ripple_bg_right_bottom" android:layout_width="0dp" android:layout_height="match_parent" android:text="去设置" android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
