        <View android:id="@+id/line" android:background="@color/CD2D2D2" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginTop="5dp" android:layout_below="@+id/edit"/>
    </RelativeLayout>
    <include layout="@layout/dialog_bottom_9_16"/>
</RelativeLayout>
