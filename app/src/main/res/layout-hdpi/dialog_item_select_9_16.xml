<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@drawable/dialog_bg" android:layout_width="250dp" android:layout_height="wrap_content">
    <TextView android:textSize="13.5sp" android:textColor="#909090" android:gravity="center_vertical" android:id="@+id/title" android:background="@drawable/bg_top" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="38dp" android:text="设置为"/>
    <View android:layout_gravity="center_horizontal" android:background="@color/DEDEDE" android:layout_width="match_parent" android:layout_height="0.5dp"/>
    <ScrollView android:scrollbarThumbVertical="@drawable/scollbar_thumb" android:id="@+id/scrollView" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:id="@+id/list" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </ScrollView>
    <TextView android:textSize="16sp" android:textColor="#222222" android:gravity="center" android:id="@+id/btn_cancel" android:background="@drawable/ripple_bg_bottom" android:layout_width="match_parent" android:layout_height="50dp" android:text="取消"/>
</LinearLayout>
