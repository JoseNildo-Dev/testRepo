        <View android:id="@+id/line" android:background="@color/CD2D2D2" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginTop="9dp" android:layout_below="@+id/edit"/>
    </RelativeLayout>
    <TextView android:textSize="16sp" android:textColor="@color/FF0000" android:id="@+id/error" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="37.3dp" android:layout_marginTop="-32dp" android:text="密码错误" android:layout_below="@+id/content"/>
    <include layout="@layout/dialog_bottom_16_9"/>
